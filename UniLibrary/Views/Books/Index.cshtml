@model IEnumerable<DataContext.Entities.Book>

<div class="site-container">
    @Html.ActionLink("Add Book", "Create", null, htmlAttributes: new { @class = "btn btn-primary actions-btn" })

    <table class="table">
        <tr>
            <th> @Html.Label("Author") </th>
            <th> @Html.Label("Genre") </th>
            <th> @Html.Label("Title") </th>
            <th> @Html.Label("Description") </th>
            <th> @Html.Label("Release") </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Author.FirstName </td>
                <td> @item.Genre.Name </td>
                <td> @item.Title </td>
                <td> @item.Description </td>
                <td> @item.ReleaseDate </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>

