@model IEnumerable<DataContext.Entities.Author>

@{ 
    ViewBag.Title = "Authors";
}

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary actions-btn" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("First Name")
        </th>
        <th>
            @Html.Label("Last Name")
        </th>
        <th>
            @Html.Label("Born")
        </th>
        <th>
            @Html.Label("City")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Born)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { authorId = item.Id }, new {@class="btn btn-primary" }) 
            <button id="deleteAuthor_@item.Id" class="btn btn-primary deletesAuthor" type="button">Delete</button>
        </td>
    </tr>
}

</table>

<div class="modalInfo">
    @Html.Partial("DeleteAuthorModal");
</div>
